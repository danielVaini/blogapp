<div class="bg-light p-5 rounded-lg m-3">
 
    <h1 class="display-4">Welcome to the node blog</h1>
    <p class="lead">It's very funny</p>
    <hr class="my-4">
    <p>Nice, very very nice!</p>
      <a href="#" class="btn btn-primary btn-lg">
        Sign up
      </a>
   
</div>

<hr>
<h2>Postagens recentes</h2>

{{#each postagens}}
<div class="card mt-4">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}">
    <button class="btn btn-success">Leia mais</button>
    </a>
    <hr>
    <small>Categoria: {{categoria.nome}}</small><br/>
    <small>Datra de publicação: {{data}}</small>
  </div>
</div>
{{else}}
  <h5>Nenhuma postagem</h5>
{{/each}}