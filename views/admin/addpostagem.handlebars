{{#each errors}}
  <div class="alert alert-danger">{{texto}}</div>
  
  {{else}}
{{/each}}

<div class="card container">
  <div class="card-body">
    <h4>Nova postagem: </h4>
    <form action="/admin/postagens/nova" method="POST">
      <label for="titulo">Titulo: </label>
      <input type="text" name="titulo" class="form-control">
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control">
      <label for="descricao">Descrição: </label>
      <input type="text" name="descricao" class="form-control">
      <label for="conteudo">conteudo: </label>
      <textarea name="conteudo"  cols="30" rows="10" class="form-control"></textarea>
      <label for="categoria">Categorias</label>
      <select name="categoria" class="form-select">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma caategoria registrada</option>

        {{/each}}
      </select>
      <button class="btn btn-success mt-4" type="submit" >Criar postagem</button>

    </form>
  </div>
</div>