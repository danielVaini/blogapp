<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add">
 <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descriçaõ: {{descricao}}</p>
      <small>Data: {{data}}</small>
      <small>Categoria: {{categoria.nome}}</small>
      <br/>
      <br/>
      <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar postagem</button></a>
      <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger">Deletar postagem</button></a>
    </div>
  </div>


{{else}}
  <p>Nenhuma postagen registrada</p>
{{/each}}
